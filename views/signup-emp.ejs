<%-include("partials/header")-%>
<div class="signup-1">
  <div class="container">

    <div class="col-sm-6 col-sm-offset-3">
      <br><br><br>



      <!-- show any messages that come back with authentication -->
      <% if (message.length > 0) { %>
      <div class="alert alert-danger"><%= message %></div>
      <% } %>

      <!-- LOGIN FORM -->
      <form action="/signup-emp" method="post" class="form-4">
        <h1><span class="fa fa-sign-in"> </span> Signup</h1>
        <div class="form-group">
          <label>Email</label>
          <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" name="password">
        </div>

        <div class="form-group">
          <label>Username</label>
          <input type="text" class="form-control" name="username">
        </div>
        <div class = "form-group">
          <label>Ministry</label> 
          <select autocomplete="off" class="form-control" id="" name="emp_mini" data-select2-id="" tabindex="-1" aria-hidden="true">
            <option value="" data-select2-id="2">Please select your ministry</option>
            <option value="Post Ministry">Post Ministry</option>
            <option value="Banking">Banking</option>
            <option value="Petroleum">Petroleum</option>
            <option value="Telecommunications">Telecommunications</option>
            <option value="School and Education">School and Education</option>
            <option value="Road and transport">Road and transport</option>
            <option value="External Affairs">External Affairs</option>
            <option value="Health">Health</option>
            <option value="Insurance">Insurance</option>
            <option value="Others">Others</option>
          </select>
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
      </form>

      <hr>

      <p>Already have an account? <a href="/login-emp" style="color: blue;">Login</a></p>
      <p>Or go <a href="/" style="color: blue;">home</a>.</p>

    </div>

  </div>
  <%-include("partials/footer")-%>
</div>
